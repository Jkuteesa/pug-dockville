a.btn.btn-primary(href="batteryform" style="position: relative; left:819px; bottom: 10px; ") new client
table.table()
    thead.table-dark
        tr
        th(scope='col') Firstname 
        th(scope='col') Lastname
        th(scope='col') Gender  
        th(scope='col') NIN 
        th(scope='col') Phone contact   
        th(scope='col') Battery size
        th(scope='col') Date
        th(scope='col') Time of arrival  
        th(scope='col') Amount
        th(scope='col') Sign off
        th(scope='col') Edit 
    tbody
    if clients.length 
        each client in clients
            tr 
                td #{client.fname}
                td #{client.lname}
                td #{client.gender}
                td #{client.nin}
                td #{client.contact}
                td #{client.battery}
                td #{client.date}
                td #{client.time}
                td #{client.amount}
                
                td 
                    form(action="/api/client/delete" method="POST") 
                        input(type="hidden" name="id" value=client._id)
                        button.btn.btn-danger(type="submit") Sign off  
                td  
                    a.btn.btn-warning(href="/api/client/edit/"+client ._id) Edit
                  

    else 
        P There are no employees in the database.

