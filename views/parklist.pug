body(style="background-color: " )
a.btn.btn-success(href="parkform" style="position: relative; left:819px; bottom: 10px; ") new client
table.table()
    thead.table-dark
        tr
        th(scope='col') Firstname 
        th(scope='col') Lastname
        th(scope='col') NIN  
        th(scope='col') Phone contact 
        th(scope='col') Cartype 
        th(scope='col') Vehicle model   
        th(scope='col') Number plate
        th(scope='col') Period
        th(scope='col') Date 
        th(scope='col') Time of arrival
        th(scope='col') Time of departure
        th(scope='col') Sign off
        th(scope='col') Edit 
    tbody
    if parks.length 
        each park in parks  
            tr 
                td #{park.fname}
                td #{park.lname}
                td #{park.nin}
                td #{park.contact}
                td #{park.cartype}
                td #{park.carmodel}
                td #{park.nplate}
                td #{park.period}
                td #{park.date}
                td #{park.timein}
                td #{park.timeout}

                
                td 
                    form(action="/api/park/delete" method="POST") 
                        input(type="hidden" name="id" value=park._id)
                        button.btn.btn-danger(type="submit") Sign off  
                td  
                    a.btn.btn-warning(href="/api/park/edit/"+park ._id) Edit
                    //- a(href=`/api/park/edit/${employee._id}`) 

    else 
        P There are no employees in the database.

