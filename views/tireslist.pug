body(style="background-color: " )
a.btn.btn-success(href="tires" style="position: relative; left:819px; bottom: 10px; ") new client
table.table()
    thead.table-dark
        tr
        th(scope='col') Firstname 
        th(scope='col') Lastname
        th(scope='col') Gender  
        th(scope='col') Phone contact 
        th(scope='col') Vehicle model   
        th(scope='col') Tire make
        th(scope='col') Tire size
        th(scope='col') Amount 
        th(scope='col') Tire services
        th(scope='col') Amount
        th(scope='col') Sign off
        th(scope='col') Edit 
    tbody
    if tires.length 
        each tire in tires  
            tr 
                td #{tire.fname}
                td #{tire.lname}
                td #{tire.gender}
                td #{tire.contact}
                td #{tire.carmodel}
                td #{tire.tiremake}
                td #{tire.tiresize}
                td #{tire.amount}
                td #{tire.carTireServices}
                td #{tire.amountt}

                
                td 
                    form(action="/api/tire/delete" method="POST") 
                        input(type="hidden" name="id" value=tire._id)
                        button.btn.btn-danger(type="submit") Sign off 
                td  
                    a.btn.btn-warning(href="/api/tire/edit/"+tire._id) Edit
                    //- a(href=`/api/tire/edit/${employee._id}`) 

    else 
        P There are no employees in the database.

